    <!--指定最基础的日志输出级别-->
    <root level="INFO">
        <!--appender将会添加到这个loger-->
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
        <!-- <appender-ref ref="logstash"/> -->
    </root>
</configuration>
